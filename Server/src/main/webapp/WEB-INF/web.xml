<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Mail Box</display-name>

  <servlet>
      <servlet-name>LetterServlet</servlet-name>
      <display-name>Letters</display-name>
      <description>LetterServlet</description>
      <servlet-class>webMailAppEE.LetterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
      <servlet-name>LetterServlet</servlet-name>
      <url-pattern>/LetterServlet</url-pattern>
  </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
